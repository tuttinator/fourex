# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here
HF_TOKEN=your_huggingface_token_here

# Modal Ollama Configuration (Recommended)
MODAL_OLLAMA_URL=https://your-modal-endpoint-url/v1
MODAL_OLLAMA_MODEL=qwen3:32b

# Logfire Configuration
LOGFIRE_TOKEN=your_logfire_token_here
LOGFIRE_ENABLED=false
LOGFIRE_CONSOLE_OUTPUT=false

# Game Backend Configuration
GAME_BACKEND_URL=http://localhost:8000/api/v1
LLM_BACKEND_URL=http://localhost:1234/v1
LLM_MODEL=qwen/qwen3-32b

# Primary LLM Provider (modal_ollama, llm_studio, openai, replicate, huggingface)
PRIMARY_LLM_PROVIDER=modal_ollama

# Fallback Providers (comma-separated)
FALLBACK_LLM_PROVIDERS=llm_studio,openai

# MCP Server Configuration
MCP_SERVER_PORT=3000

# Database Configuration (for persistence)
DATABASE_URL=postgresql+asyncpg://fourex:fourex@localhost:5432/fourex
SQL_DEBUG=false

# Game Persistence Settings
USE_PERSISTENT_GAME_CLIENT=true
ENABLE_GAME_SNAPSHOTS=true
SNAPSHOT_INTERVAL=10